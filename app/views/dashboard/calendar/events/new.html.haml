.body
  .mainform
    %h1 Add New Event
    = form_tag dashboard_calendar_events_path, :method => :post do
      .below
        = label :event, :name, 'Event Name'
      = text_field :event, 'name', :value => 'Untitled'
      %p
      .below
        = label :event, :location, 'Location'
      = text_field :event, 'location'
      %p
      .below
        = label :event, :description, 'Description'
      = text_field :event, 'description'

      %p
        .below
          = label :event, :start_at, 'Start Time'
          = datetime_select :event, :start_at
      %p
        .below
          = label :event, :end_at, 'End Time'
          = datetime_select :event, :end_at

      %p
        = label :event, :start_date, 'Start Date'
        = text_field :event, 'start_date'
      %p
        = label :event, :end_date, 'End Date'
        = text_field :event, 'end_date'

      %p
        .below
          = label :event, :color, 'Event Color'
          - [ 'red', 'green' ].each do |color|
            = radio_button :event, :color, @color = color


      %p
        = submit_tag 'Save Event'
