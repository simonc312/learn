<div class='mainform'>

<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div>Interested in: <%= f.select :status, options_for_select([['Participating in our 90-days program', 'client_candidate'],['Being a volunteer', volunteer_candidate']]) %><br />

  <div><%= f.submit "Sign up", :onclick=>"return validateSignUpForm();" %></div>
<% end %>

</div>
